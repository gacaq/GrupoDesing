<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>
<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<p>
  <b>Tags:</b>
  <%= @post.tags.map { |t| t.name }.join(', ') %>
</p>
<h2>Commentaries</h2>
<% @post.comments.each do |c| %>
    <%= render 'comments/comment', :comment => c %>
<% end %>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
