<h2>Registro de Cuenta</h2>
<div class= 'span8 offset4'>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :Nombre%><br />
  <%= f.text_field :nombre %></div>

  <div><%= f.label :Apellido %><br />
  <%= f.text_field :apellido %></div>

  <div><%= f.label :Cédula %><br />
  <%= f.text_field :cedula %></div>

  <div><%= f.label :Teléfono %><br />
  <%= f.text_field :telephone %></div>

  <div><%= f.label :Correo_Electrónico %><br /> 
  <%= f.email_field :email %></div>

  <div><%= f.label :Contraseña %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :Confirme_su_Contraseña%><br />
  <%= f.password_field :password_confirmation %></div>


  <div class="field">
    <%= f.label :Roles %><br />
    <%= collection_select(:user, :role_id, Role.all, :id, :name, :prompt => t(:seleccione_rol)) %> 
  </div>

  <div class="field"> 
    <%= f.label :Empresa %><br />
    <%= collection_select(:user, :enterprise_id, Enterprise.all, :id, :name, :prompt => t(:seleccione_empresa)) %> 
  </div>

  <div><%= f.submit "Crear Cuenta" %></div>
<% end %>

<%= render "devise/shared/links" %> 



</div>

