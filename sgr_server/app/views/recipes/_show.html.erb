            <% variable_ranges = a.variable_range %>
            <% variable_ranges_alarms = a.variable_ranges_alarms(variable_ranges,a.id) %>

            <% variable_ranges_alarms.each do |vr| %>

              <tr>
                <td><%= vr.variable.name %></td>
                <td><%= a.id %></td> 
                <td><%= a.id %></td>  
                <td><%= vr.value_min %></td>
                <td><%= vr.value_max %></td>
                <td>
                  <% if a.active == true %>
                    <span class="btn btn-success btn-small">activo</span>
                  <% end %>
                  <span class="btn btn-inverse btn-small">inactivo</span>
                </td>
              </tr>

            <% end %>
                                
        <% end %> 
                          
    <% end %>
     
    </tbody>
  </table>

